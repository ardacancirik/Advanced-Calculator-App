<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtValue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""
                android:textColor="#3F51B5" />

            <EditText
                android:id="@+id/values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/txtValue2"
                android:layout_width="75dp"
                android:layout_height="32dp"
                android:text=""
                android:textColor="#3F51B5" />

            <TextView
                android:id="@+id/nmbrBinary"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="" />

            <TextView
                android:id="@+id/txtOctal"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:text="Octal value: "
                android:textColor="#3F51B5" />

            <TextView
                android:id="@+id/nmbrOctal"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="" />

            <TextView
                android:id="@+id/txtHex"
                android:layout_width="78dp"
                android:layout_height="41dp"
                android:text="Hexdecimal value: "
                android:textColor="#3F51B5"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/nmbrHex"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="" />

            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="189dp">


            <RadioButton
                android:id="@+id/RbBinary"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:onClick="checkButton"
                android:text="Binary"
                android:textColor="#3F51B5" />


            <RadioButton
                android:id="@+id/RbDecimal"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:checked="true"
                android:onClick="checkButton"
                android:text="Decimal"
                android:textColor="#3F51B5" />

            <Button
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply" />

        </RadioGroup>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>